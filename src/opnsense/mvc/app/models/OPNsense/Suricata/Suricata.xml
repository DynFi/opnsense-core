<model>
    <mount>//OPNsense/Suricata</mount>
    <version>1.0.0</version>
    <description>
        Suricata settings
    </description>
    <items>
        <interfaces>
            <interface type="ArrayField">
                <enabled type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enabled>
                <iface type="InterfaceField">
                    <Required>Y</Required>
                    <default>wan</default>
                    <multiple>N</multiple>
                    <AddParentDevices>Y</AddParentDevices>
                    <filters>
                        <enable>/^(?!0).*$/</enable>
                        <type>/(?s)^((?!group).)*$/</type>
                    </filters>
                </iface>
                <description type="TextField">
                    <Required>N</Required>
                </description>

                <alertsystemlog type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </alertsystemlog>
                <alertsystemlogfacility type="OptionField">
                    <Required>N</Required>
                    <default>local1</default>
                    <OptionValues>
                        <auth>auth</auth>
                        <authpriv>authpriv</authpriv>
                        <daemon>daemon</daemon>
                        <kern>kern</kern>
                        <security>security</security>
                        <syslog>syslog</syslog>
                        <user>user</user>
                        <local0>local0</local0>
                        <local1>local1</local1>
                        <local2>local2</local2>
                        <local3>local3</local3>
                        <local4>local4</local4>
                        <local5>local5</local5>
                        <local6>local6</local6>
                        <local7>local7</local7>
                    </OptionValues>
                </alertsystemlogfacility>
                <alertsystemlogpriority type="OptionField">
                    <Required>N</Required>
                    <default>notice</default>
                    <OptionValues>
                        <emerg>emerg</emerg>
                        <crit>crit</crit>
                        <alert>alert</alert>
                        <err>err</err>
                        <warning>warning</warning>
                        <notice>notice</notice>
                        <info>info</info>
                    </OptionValues>
                </alertsystemlogpriority>

                <enablestatscollection type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enablestatscollection>
                <statsupdateinterval type="IntegerField">
                    <default>10</default>
                    <Required>N</Required>
                </statsupdateinterval>
                <enablestatslog type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </enablestatslog>
                <enabletelegrafstats type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </enabletelegrafstats>
                
                <enablehttplog type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </enablehttplog>
                <appendhttplog type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </appendhttplog>
                <httplogextended type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </httplogextended>
                
                <enabletlslog type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enabletlslog>
                <enabletlsstore type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enabletlsstore>
                <tlslogextended type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </tlslogextended>
                
                <enablefilestore type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enablefilestore>
                <filestoreloggingdir type="TextField">
                    <Required>N</Required>
                </filestoreloggingdir>
                                
                <enablepcaplog type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enablepcaplog>
                <maxpcaplogsize type="IntegerField">
                    <default>32</default>
                    <Required>Y</Required>
                </maxpcaplogsize>
                <pcaplogmaxrow type="IntegerField">
                    <default>1000</default>
                    <Required>Y</Required>
                </pcaplogmaxrow>

                <enableverboselogging type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </enableverboselogging>

                <enableevelog type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </enableevelog>
                <eveoutputtype type="OptionField">
                    <Required>N</Required>
                    <default>regular</default>
                    <OptionValues>
                        <regular>FILE</regular>
                        <syslog>SYSLOG</syslog>
                        <redis>REDIS</redis>
                    </OptionValues>
                </eveoutputtype>                               
                <evesystemlogfacility type="OptionField">
                    <Required>N</Required>
                    <default>local1</default>
                    <OptionValues>
                        <auth>AUTH</auth>
                        <authpriv>AUTHPRIV</authpriv>
                        <daemon>DAEMON</daemon>
                        <kern>KERN</kern>
                        <security>SECURITY</security>
                        <syslog>SYSLOG</syslog>                        
                        <user>USER</user>
                        <local0>LOCAL0</local0>
                        <local1>LOCAL1</local1>
                        <local2>LOCAL2</local2>
                        <local3>LOCAL3</local3>
                        <local4>LOCAL4</local4>
                        <local5>LOCAL5</local5>
                        <local6>LOCAL6</local6>
                        <local7>LOCAL7</local7>                                                                        
                    </OptionValues>
                </evesystemlogfacility>
                <evesystemlogpriority type="OptionField">
                    <Required>N</Required>
                    <default>notice</default>
                    <OptionValues>
                        <emerg>EMERG</emerg>
                        <crit>CRIT</crit>
                        <alert>ALERT</alert>
                        <err>ERR</err>
                        <warning>WARNING</warning>
                        <notice>NOTICE</notice>
                        <info>INFO</info>
                    </OptionValues>
                </evesystemlogpriority>
                <everedisserver type="TextField">
                    <Required>N</Required>
                    <default>127.0.0.1</default>
                </everedisserver>
                <everedisport type="IntegerField">
                    <Required>N</Required>
                    <default>6379</default>
                </everedisport>
                <everedismode type="OptionField">
                    <Required>N</Required>
                    <default>list</default>
                    <OptionValues>
                        <list>List (LPUSH)</list>
                        <rpush>List (RPUSH)</rpush>
                        <channel>Channel (PUBLISH)</channel>
                    </OptionValues>
                </everedismode>
                <everediskey type="TextField">
                    <Required>N</Required>
                    <default>suricata</default>
                </everediskey>
                <evelogalertsxff type="BooleanField">
                    <default>0</default>
                    <Required>N</Required>
                </evelogalertsxff>
                
                <blockoffenders type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </blockoffenders>
                <ipsmode type="OptionField">
                    <Required>N</Required>
                    <default>legacy</default>
                    <OptionValues>
                        <legacy>Legacy Mode</legacy>
                        <inline>Inline Mode</inline>
                    </OptionValues>
                </ipsmode>
                <blockoffenderskill type="BooleanField">
                    <default>1</default>
                    <Required>Y</Required>
                </blockoffenderskill>
                <blockoffendersip type="OptionField">
                    <Required>N</Required>
                    <default>both</default>
                    <OptionValues>
                        <src>SRC</src>
                        <dst>DST</dst>
                        <both>BOTH</both>
                    </OptionValues>
                </blockoffendersip>
                <blockdropsonly type="BooleanField">
                    <default>0</default>
                    <Required>Y</Required>
                </blockdropsonly>
                <ipsnetmapthreads type="TextField">
                    <default>auto</default>
                    <Required>Y</Required>
                </ipsnetmapthreads>

            </interface>
        </interfaces>
    </items>
</model>
