<model>
    <mount>//OPNsense/RPZ/FilteringList</mount>
    <description>
        DNS Filtering List
    </description>
    <version>1.0.0</version>
    <items>
      <lists>
        <list type=".\FilteringListField">
          <enabled type="BooleanField">
            <default>1</default>
            <Required>Y</Required>
          </enabled>
          <name type="TextField">
            <Required>Y</Required>
            <Constraints>
              <check001>
                <ValidationMessage>A filtering list with this name already exists.</ValidationMessage>
                <type>UniqueConstraint</type>
              </check001>
            </Constraints>
          </name>
          <categories type="ModelRelationField">
            <Model>
              <categories>
                <source>OPNsense.RPZ.FilteringList</source>
                <items>category</items>
                <display>name</display>
              </categories>
            </Model>
            <multiple>Y</multiple>
            <ValidationMessage>Related categories not found.</ValidationMessage>
            <Required>N</Required>
          </categories>
          <apply_to type="ModelRelationField">
            <Model>
              <apply_to>
                <source>OPNsense.RPZ.FilteringList</source>
                <items>alias</items>
                <display>name</display>
              </apply_to>
            </Model>
            <multiple>Y</multiple>
            <ValidationMessage>Related aliases not found.</ValidationMessage>
            <Required>Y</Required>
          </apply_to>
        </list>
      </lists>
      <category type="ArrayField">
        <name type="TextField">
          <Required>Y</Required>
          <Constraints>
            <check001>
              <ValidationMessage>A category list with this name already exists.</ValidationMessage>
              <type>UniqueConstraint</type>
            </check001>
          </Constraints>
        </name>
      </category>
      <alias type="ArrayField">
        <name type="TextField">
          <Required>Y</Required>
        </name>
        <uuid type="TextField">
          <Required>Y</Required>
        </uuid>
      </alias>
    </items>
</model>
